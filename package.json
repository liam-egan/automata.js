{
  "name": "automata.js",
  "version": "1.0.0",
  "description": "A JavaScript library for creating and manipulating cellular automata",
  "main": "lib/cjs/automata.min.js",
  "browser": "lib/umd/automata.min.js",
  "repository": "https://github.com/liam-egan/automata.js.git",
  "author": "Liam Egan",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write 'src/**/*.js' 'test/**/*.js'",
    "lint": "eslint 'src/**/*.js' 'test/**/*.js'",
    "lint!": "npm run format && npm run lint --fix",
    "build": "rimraf lib/ && rollup --config",
    "test": "NODE_ENV=test mocha --require @babel/register 'test/**/*.spec.js'",
    "docs": "rimraf docs/ && jsdoc -c jsdoc.json",
    "precommit": "npm run test && lint-staged && npm run docs && git add docs/"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint!",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/polyfill": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-stage-3": "^7.0.0-beta.51",
    "@babel/register": "^7.0.0-beta.51",
    "@freshes/jsdoc-template": "^1.0.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.2.0",
    "loke-jsdoc-theme": "^2.1.0",
    "mocha": "^5.2.0",
    "prettier": "1.13.5",
    "rimraf": "^2.6.2",
    "rollup": "^0.61.1",
    "rollup-plugin-babel": "^4.0.0-beta.5",
    "rollup-plugin-babel-minify": "^5.0.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "sinon": "^6.0.0"
  }
}
